<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice_roll_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ailuridaes.simpledice.DiceRoll"
    android:background="@color/diceroll_background_color">

    <LinearLayout
        android:id="@+id/dice23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/dice2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice2_img"
                android:src="@drawable/dice_white_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dice3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice3_img"
                android:src="@drawable/dice_white_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/dice1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice1_img"
                android:src="@drawable/dice_white_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dice4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice4_img"
                android:src="@drawable/dice_white_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/dice5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice5_img"
                android:src="@drawable/dice_white_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dice6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice6_img"
                android:src="@drawable/dice_white_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice78"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/dice7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice7_img"
                android:src="@drawable/dice_white_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dice8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dice8_img"
                android:src="@drawable/dice_white_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dice_margin"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
