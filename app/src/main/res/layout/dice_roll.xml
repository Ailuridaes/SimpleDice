<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice_roll_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ailuridaes.simpledice.DiceRoll"
    android:background="@color/diceroll_background_color">

    <LinearLayout
        android:id="@+id/dice12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/dice1_img"
                android:src="@drawable/dice_white_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                 />
            <ImageView
                android:id="@+id/dice2_img"
                android:src="@drawable/dice_white_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/dice3_img"
                android:src="@drawable/dice_white_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
            <ImageView
                android:id="@+id/dice4_img"
                android:src="@drawable/dice_white_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/dice5_img"
                android:src="@drawable/dice_white_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
            <ImageView
                android:id="@+id/dice6_img"
                android:src="@drawable/dice_white_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dice78"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/dice7_img"
                android:src="@drawable/dice_white_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
            <ImageView
                android:id="@+id/dice8_img"
                android:src="@drawable/dice_white_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dice_margin"
                android:adjustViewBounds= "true"
                />
    </LinearLayout>
</LinearLayout>
